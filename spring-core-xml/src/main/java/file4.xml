<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd">
            
           <bean class="com.pack2.Laptop" id="lapi">
           
           <constructor-arg name="drive" ref="pendrive"></constructor-arg>
           
           </bean>
           
           <bean class="com.pack2.Pendrive" id="pendrive">
           
           <constructor-arg name="capacity" value="32"></constructor-arg>
           <constructor-arg name="price" value="820"></constructor-arg>
           
           </bean>
            
           </beans>
            